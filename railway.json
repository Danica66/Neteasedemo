{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd frontpage && npm install -g pnpm && pnpm install --no-frozen-lockfile && pnpm run build"
  },
  "deploy": {
    "startCommand": "cd frontpage && pnpm run preview --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}